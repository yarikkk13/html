resizeWidth('.two-free-wrap-item', 'mobile', 480);

const mobileClass = document.querySelectorAll('.mobile');
mobileClass.forEach((el) => {

    el.onclick = function () {
        console.log(el.children[1]);
        el.classList.toggle('is-active');
        if (el.classList.contains('is-active')) {
            el.children[1].style.height = el.children[1].scrollHeight + 'px';
        } else {
            el.children[1].style.height = '';
        }
    }
})

mobileClass.forEach((el) => {
    if (el.classList.contains('is-active')) {
        el.children[1].style.height = el.children[1].scrollHeight + 'px';
    }
})
