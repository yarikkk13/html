let screen992 = window.matchMedia('all and (max-width: 992px)');
let label = document.querySelectorAll('.tabs_program li label');

function screenWidth992() {
    if (screen992.matches) {
        document.querySelector('.video-review-wrap').classList.add('video-slide');
    }
}

function programMedia() {
    label.forEach(el => {
        el.classList.remove('desk');
    });
}


