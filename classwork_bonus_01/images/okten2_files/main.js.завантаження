// type 6 border change color
let sixButton = document.querySelectorAll('.six-about-item-button');
sixButton.forEach(function (el) {
    el.addEventListener('mouseenter', function (e) {
        e.target.style.backgroundColor = '#3298F2';
        e.target.offsetParent.style.borderColor = '#3298F2';
        e.target.parentElement.children[0].style.borderColor = '#3298F2';
    });

    el.addEventListener('mouseleave', function (e) {
        e.target.style.backgroundColor = '';
        e.target.offsetParent.style.borderColor = '';
        e.target.parentElement.children[0].style.borderColor = '';
    })
});
// end type 6 border change color


// play video youtube with
function playMobile(play) {
    play.forEach((el) => {
        el.onclick = () => {
            let videoOverlay = document.querySelector('#video-overlay');
            let id = el.children[0].dataset.id;
            let videoReviewWrap = '';


            videoOverlay.classList.add('open');


            videoReviewWrap = `
            <iframe width="500" height="360" src="https://youtube.com/embed/${id}"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen id="Youtube"></iframe>
        `;

            videoOverlay.innerHTML += videoReviewWrap;

        }
    });
}

playMobile(document.querySelectorAll('.play'));
// playMobile(document.querySelectorAll('.project-item'));


$('.video-overlay, .video-overlay-close').on('click', function (e) {
    e.preventDefault();
    close_video('.video-overlay.open');
});

$(document).keyup(function (e) {
    if (e.keyCode === 27) {
        close_video('.video-overlay.open');
    }
});

function close_video(classClose) {
    $(classClose).removeClass('open').find('iframe').remove();
}

// mobile play video youtube
function playDeskTop(play) {
    play.forEach((el) => {
        el.onclick = () => {
            let videoOverlay = document.querySelector('#video-overlay');
            let id = el.dataset.id;
            let videoReviewWrap = '';
            videoOverlay.classList.add('open');


            videoReviewWrap = `
            <iframe width="500" height="360" src="https://youtube.com/embed/${id}?autoplay=1"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen id="Youtube"></iframe>
        `;

            videoOverlay.innerHTML += videoReviewWrap;
        }
    });
}

let playDesk = document.querySelectorAll('.play-button-img');
playDeskTop(playDesk);
playDeskTop(document.querySelectorAll('.web-dev-btn-play'));
playDeskTop(document.querySelectorAll('.video-course-play'));
playDeskTop(document.querySelectorAll('.play-video-button-icon-outer'));
playDeskTop(document.querySelectorAll('.play-button-wrap'));
playDeskTop(document.querySelectorAll('.project-item'));

// ================================================================================================================

function activeLink(linka, classLink) {
    $(linka).each(function () {
        let location = window.location.href;
        let link = this.href;
        if (location == link) {
            $(this).addClass(classLink);
        }
    });
}

activeLink('.header-menu li a', 'active-link');
activeLink('.nav-menu .dropdown-menu li a', 'drop-active-link');
activeLink('.menu-mobile ul li a', 'active-link');


// Accordion 4
function accord4(elem, elem2) {

    elem.onclick = () => {
        elem.children[3].classList.toggle('is-visible');
        if (elem.children[3].classList.contains('is-visible')) {
            elem.children[3].style.height = elem.children[3].scrollHeight + 'px';
            elem.children[1].classList.add('rotate-180');

        } else {
            elem.children[3].style.height = '';
            elem.children[1].classList.remove('rotate-180');
        }
    };

    if (elem2.classList.contains('is-visible')) {
        elem2.style.height = elem2.scrollHeight + 'px';
    }
}


//ИНТЕНСИВ ДЛЯ НОВИЧКОВ media 768
function intensiveForBeginners() {
    let list = document.querySelectorAll('.list-inner768');
    list.forEach((el) => {
        el.onclick = () => {
            el.classList.toggle('is-active');
            if (el.classList.contains('is-active')) {
                el.children[1].style.height = el.children[1].scrollHeight + 'px';

            } else {
                el.children[1].style.height = '';
            }
        }
    })

}


//ЭТОТ КУРС ДЛЯ ТЕБЯ ЕСЛИ ТЫ :
function courseForYou() {
    let thisCourse = document.querySelectorAll('.this-course-item768');

    thisCourse.forEach((el) => {
        el.onclick = () => {
            el.classList.toggle('is-active');
            if (el.classList.contains('is-active')) {
                el.children[2].style.height = el.children[2].scrollHeight + 'px';

            } else {
                el.children[2].style.height = '';
            }
        }
    })
}

courseForYou();

//=======================================================================================================================
// add class mobile when with 992px
function w992(elementClass) {
    const mql = window.matchMedia('all and (max-width: 992px)');
    if (mql.matches) {
        elementClass.forEach((el) => {
            el.classList.add('mobile');
        });
    } else {
        elementClass.forEach((el) => {
            el.classList.remove('mobile');
        });
    }
}


//=======================================================================================================================
function mobile() {
    const mobile = document.querySelectorAll('.mobile');
    mobile.forEach((el) => {

        el.onclick = function () {
            el.classList.toggle('is-active');
            if (el.classList.contains('is-active')) {
                el.children[1].style.height = el.children[1].scrollHeight + 'px';
            } else {
                el.children[1].style.height = '';
            }
        }
    })

    mobile.forEach((el) => {
        if (el.classList.contains('is-active')) {
            el.children[1].style.height = el.children[1].scrollHeight + 'px';
        }
    })
}

function accordionJS(elementClass, numChild) {
    let contentMobile = document.querySelectorAll(elementClass);

    contentMobile.forEach(el => {
        el.onclick = () => {
            el.classList.toggle('is-active');
            if (el.classList.contains('is-active')) {
                el.children[numChild].style.height = el.children[numChild].scrollHeight + 'px';
            } else {
                el.children[numChild].style.height = '';
            }
        };

        if (el.classList.contains('is-active')) {
            el.children[numChild].style.height = el.children[numChild].scrollHeight + 'px';
        }
    })
}


const buttonTimer = document.querySelector('.thanks-timer-button');

if (buttonTimer) {
    const timerForm = document.querySelector('.timer-form');
    buttonTimer.onclick = () => {
        timerForm.classList.add('open');
    };

    const closeTimerForm = document.querySelector('.timer-form .video-overlay-close');
    closeTimerForm.onclick = () => {
        timerForm.classList.remove('open');
    };
}

function resizeWidth(classElement, classElementMobile, widthScreen) {
    const wrap = document.querySelectorAll(classElement);
    const mql = window.matchMedia(`all and (max-width: ${widthScreen}px)`);

    if (mql.matches) {
        wrap.forEach((el) => {
            el.classList.add(classElementMobile);
        });

        const whyOwu = document.querySelectorAll('.why-owu-item');
        whyOwu.forEach(el => {
            el.classList.add(classElementMobile);
        });

    } else {
        wrap.forEach((el) => {
            el.classList.remove(classElementMobile);
        });
    }
}

function addClassForMobile(currentClass, addClass) {
    let screenMobile = window.matchMedia('all and (max-width: 992px)');
    if (screenMobile.matches) {
        document.querySelector(currentClass).classList.add(addClass);
    }
}

let locationX = window.location.href;

function thisLinks(linka, classLink) {

    let pageLink = document.querySelectorAll(linka);
    pageLink.forEach(el => {
        const [href] = el.getAttribute('href').split('.')
        const hrefConc = 'http://owu/' + href;
        if (locationX === hrefConc) {
            el.classList.add(classLink)
        }

    })
}

thisLinks('.header-menu li a', 'active-link')
thisLinks('.nav-menu .dropdown-menu li a', 'drop-active-link');
thisLinks('.menu-mobile ul li a', 'active-link');



















