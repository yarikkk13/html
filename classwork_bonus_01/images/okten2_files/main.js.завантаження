// modal
let modalWindow = document.querySelector('.body-modal');
let modalButton = document.querySelectorAll('.button-modal');
let consultationButton = document.querySelectorAll('.consultation-modal');
let popapButton = document.querySelectorAll('.call');
let popapWindow = document.querySelector('.body-popap');
let closeButton = document.querySelectorAll('.close-image');

function modal(element, button) {
    button.forEach(el => {
        el.onclick = () => {
            element.classList.add('flex-d');
        }
    })
}

modal(modalWindow, modalButton);
// modal(modalWindow, consultationButton, closeButton);

popapButton.forEach(el => {
    el.onclick = () => {
        popapWindow.classList.add('flex-d');
    }
})

closeButton.forEach(el => {
    el.onclick = () => {

        try {
            popapWindow.classList.remove('flex-d');
            modalWindow.classList.remove('flex-d');
        } catch (e) {
            console.log(e)
        }

    }
})

consultationButton.forEach(button => {
    button.onclick = ()=> {
        popapWindow.classList.add('flex-d')
    }
})

// end modal

